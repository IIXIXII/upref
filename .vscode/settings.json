{
    "python.testing.unittestEnabled": false,
    "python.testing.pyTestEnabled": true,
    "python.testing.pyTestArgs": [
        "-c",
        "${workspaceRoot}\\src\\python\\pytest.ini",
        "--junitxml=${workspaceRoot}/src/python/test_result.xml",
        "-v", // increase verbosity
        // "-l", // show locals in tracebacks
        // "-x", // exit instantly on first error or failed test
        // "--ff", // run all tests but run the last failures first
        // "--color=yes", // color terminal output (yes/no/auto)
        "${workspaceRoot}/src/python/pymdtools"
    ],
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Args": [
        "--config=${workspaceRoot}/src/python/config/pep8.conf"
    ],
    "python.linting.pylintArgs": [
        "--rcfile=${workspaceRoot}/src/python/config/pylint.conf"
    ],
    "python.formatting.autopep8Args": [
        "--global-config=${workspaceRoot}/src/python/config/pep8.conf"
    ],
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/doc/html": true
    },
    "git.ignoreLimitWarning": true,
}